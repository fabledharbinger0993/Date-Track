# Environment Variables for Date-Track

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://datetrack:development@localhost:5432/datetrack
DB_PASSWORD=development

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Redis (optional)
REDIS_URL=redis://localhost:6379

# AI Services (Choose one or both)
# Ollama (Free, Local, Recommended)
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=phi

# Azure OpenAI (Alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# OAuth Providers (for calendar/email integration)
# Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/auth/microsoft/callback

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:5000/api/auth/facebook/callback

# Apple (optional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Yahoo (optional)
YAHOO_CLIENT_ID=your-yahoo-client-id
YAHOO_CLIENT_SECRET=your-yahoo-client-secret

# MCP (Model Context Protocol) Configuration
MCP_FILESYSTEM_PATH=/app/data
MCP_LOG_LEVEL=info

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_ID=your-slack-team-id

# GitHub Integration (optional)
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your-github-token

# Canva Integration (optional)
CANVA_API_KEY=your-canva-api-key

# OpenWeather API (optional)
OPENWEATHER_API_KEY=your-openweather-api-key
