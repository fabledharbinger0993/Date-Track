PORT=5000
NODE_ENV=production
REPLIT=true
SESSION_SECRET=calinvite-secret-change-in-replit-secrets

# Database (in-memory for now, can add Replit DB later)
DATABASE_TYPE=memory

# Ollama AI (will fallback to chrono-node on Replit)
# To enable AI: Run Ollama locally and use Replit's external URL feature
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=phi
# Fallback parsing works without Ollama!

# OAuth (configure in Replit Secrets for security)
# GOOGLE_CLIENT_ID=your-id
# GOOGLE_CLIENT_SECRET=your-secret
# GOOGLE_REDIRECT_URI=https://your-repl-name.your-username.repl.co/api/auth/google/callback

FRONTEND_URL=https://your-repl-name.your-username.repl.co
BACKEND_URL=https://your-repl-name.your-username.repl.co
