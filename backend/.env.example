PORT=5000
NODE_ENV=development
SESSION_SECRET=your-session-secret

# Database Configuration (SQLite for offline-first, PostgreSQL for cloud)
DATABASE_TYPE=sqlite
# SQLite path (for offline-first)
DATABASE_PATH=./data/datetrack.db
# OR PostgreSQL (for cloud deployment)
DATABASE_URL=postgresql://datetrack:password@localhost:5432/datetrack
REDIS_URL=redis://localhost:6379

# Ollama AI Configuration (FREE, LOCAL, OFFLINE-FIRST)
OLLAMA_HOST=http://localhost:11434
# Recommended models for offline use:
#   phi (2.3GB) - Best balance of size/accuracy - RECOMMENDED
#   tinyllama (637MB) - Ultra lightweight, still capable  
#   qwen2:1.5b (934MB) - Good reasoning for size
#   mistral (4GB) - More powerful but larger
# Install: ollama pull phi
OLLAMA_MODEL=phi

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Microsoft Calendar OAuth (Outlook/Teams)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/auth/microsoft/callback

# Apple Calendar OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_REDIRECT_URI=http://localhost:5000/api/auth/apple/callback

# Facebook Events OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:5000/api/auth/facebook/callback

# Yahoo Calendar OAuth
YAHOO_CLIENT_ID=your-yahoo-client-id
YAHOO_CLIENT_SECRET=your-yahoo-client-secret
YAHOO_REDIRECT_URI=http://localhost:5000/api/auth/yahoo/callback

# Canva Integration (for design embedding)
CANVA_API_KEY=your-canva-api-key

# Email Crawler Agent
# Gmail uses OAuth (same credentials as Google Calendar above)
# For other providers (Outlook, Yahoo), use IMAP:
EMAIL_CRAWLER_ENABLED=false
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=your-email@example.com
IMAP_PASSWORD=your-email-password
IMAP_TLS=true

# External APIs (for native integrations)
GOOGLE_MAPS_API_KEY=your-google-maps-key
OPENWEATHER_API_KEY=your-openweather-key

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
